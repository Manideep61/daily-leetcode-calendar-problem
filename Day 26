class Solution {
public:
    bool reorderedPowerOf2(int n) {
        string target = getDigitSignature(n);
        for (int i = 0; i < 31; ++i) {
            int power = 1 << i;
            if (getDigitSignature(power) == target) {
                return true;
            }
        }
        return false;
    }
private:
    string getDigitSignature(int num) {
        string s = to_string(num);
        sort(s.begin(), s.end());
        return s;
    }
};
