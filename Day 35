class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long count = 0;
        long long zeros = 0;
        for (int num : nums){
            if(num == 0){
                zeros++;
                count += zeros;
            }else{
                zeros = 0;
            }
        }
        return count;
    }
};
