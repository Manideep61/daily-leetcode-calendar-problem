class Solution {
public:
    int findClosest(int x, int y, int z) {
        int result = 0;
        int temp1 = 0;
        int temp2=0;
        if(x>=z){
            temp1 = x-z;
        }else{
            temp1= z-x;
        }
        if(y>=z){
            temp2 = y-z;
        }else{
            temp2 = z-y;
        }
        if(temp1<temp2){
            result = 1;
        }else if(temp1>temp2){
            result = 2;
        }
        return result;
    }
};
