class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        sort(nums.begin(), nums.end());
        int count = 0;
        int previous = -1000000000;
        for (int i = 0; i < nums.size(); i++) {
            int left = max(nums[i] - k, previous + 1);

            if (left <= nums[i] + k) {
                previous = left;
                count++;
            }
        }
        return count;
    }
};
